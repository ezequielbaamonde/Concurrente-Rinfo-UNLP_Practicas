{Consultar por qu√© queda bloqueado el robot}

programa tworobots
procesos
  proceso juntarFlores(ES cant: numero)
  comenzar
    mientras (HayFlorEnLaEsquina)
      tomarFlor
      cant:= cant + 1
  fin
  proceso recorrerAvenida(ES flores: numero)
  comenzar
    repetir 9
      juntarFlores(flores)
      mover
    juntarFlores(flores)
  fin
  
areas
  r1: AreaP (1,1,1,10){Robot 1}
  r2: AreaP (2,11,2,20){Robot 2}
  
robots
  robot tipo1
  variables
    id: numero
    f: numero
    floresr2: numero
    resultado: numero
  comenzar
    recorrerAvenida(f)
    EnviarMensaje(f, robot2)
    RecibirMensaje(floresr2, robot2)
    si (floresr2<f)
      resultado:= f - floresr1
      Informar(resultado)
  fin
  
  robot tipo2
  variables
    id: numero
    f: numero
    floresr1: numero
    resultado: numero
  comenzar
    recorrerAvenida(f)
    EnviarMensaje(f, robot1)
    RecibirMensaje(floresr1, robot1)
    si (floresr1<f)
      resultado:= f - floresr1
      Informar(resultado)
  fin
  
variables
  robot1: tipo1
  robot2: tipo1
  
comenzar
  AsignarArea(robot1, r1)
  AsignarArea(robot2, r2)
  Iniciar(robot1, 1,1)
  Iniciar(robot2, 2,11)
fin